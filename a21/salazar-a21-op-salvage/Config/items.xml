<root>

	<!-- Salvage T1 Wrench -->
	<append xpath="//effect_group[@name='meleeToolSalvageT1Wrench']">
		<passive_effect name="BlockDamage" operation="base_set" value="160" tags="perkSalvageOperations"/>
		<!-- default 38.5 -->
	</append>

	<!-- Salvage T2 Ratchet -->
	<append xpath="//effect_group[@name='meleeToolSalvageT2Ratchet']">
		<passive_effect name="BlockDamage" operation="base_set" value="200" tags="perkSalvageOperations"/>
		<!-- default 48.5 -->
	</append>

	<!-- Salvage T3 Impact Driver -->
	<append xpath="//effect_group[@name='meleeToolSalvageT3ImpactDriver']">
		<passive_effect name="BlockDamage" operation="base_set" value="240" tags="perkSalvageOperations"/>
		<!-- default 58 -->
	</append>

</root>
