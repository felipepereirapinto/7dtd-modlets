<root>
	<!--
	HP ammo now costs the same to craft as AP ammo in gunpowder instead of bullet tips
	
						Regular		HP before	HP after	AP
	- 9mmBullet:		1/1/1		2/1/1		1/2/1		2/2/1
	- 44MagnumBullet	1/2/1		2/2/1		1/3/1		2/3/1
	- 762mmBullet:		1/3/1		2/3/1		1/5/1		2/5/1

	Resource: BulletTip/GunPowder/BulletCasing
	-->

	<set xpath="//recipe[@name='ammo9mmBulletHP']">
		<ingredient name="resourceBulletTip" count="1"/>
		<ingredient name="resourceGunPowder" count="2"/>
		<ingredient name="resourceBulletCasing" count="1"/>
	</set>
	<set xpath="//recipe[@name='ammoBundle9mmBulletHP']">
		<ingredient name="resourceBulletTip" count="80"/>
		<ingredient name="resourceGunPowder" count="160"/>
		<ingredient name="resourceBulletCasing" count="80"/>
	</set>
	<set xpath="//recipe[@name='ammo44MagnumBulletHP']">
		<ingredient name="resourceBulletTip" count="1"/>
		<ingredient name="resourceGunPowder" count="3"/>
		<ingredient name="resourceBulletCasing" count="1"/>
	</set>
	<set xpath="//recipe[@name='ammoBundle44MagnumBulletHP']">
		<ingredient name="resourceBulletTip" count="80"/>
		<ingredient name="resourceGunPowder" count="240"/>
		<ingredient name="resourceBulletCasing" count="80"/>
	</set>
	<set xpath="//recipe[@name='ammo762mmBulletHP']">
		<ingredient name="resourceBulletTip" count="1"/>
		<ingredient name="resourceGunPowder" count="5"/>
		<ingredient name="resourceBulletCasing" count="1"/>
	</set>
	<set xpath="//recipe[@name='ammoBundle762mmBulletHP']">
		<ingredient name="resourceBulletTip" count="80"/>
		<ingredient name="resourceGunPowder" count="400"/>
		<ingredient name="resourceBulletCasing" count="80"/>
	</set>

</root>
